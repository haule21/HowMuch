<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HowMuch.PasswordFindPage"
             Title="패스워드 찾기">
    <StackLayout Padding="20">
        <Label Text="아이디를 입력해주세요." FontSize="Medium" />
        <Entry x:Name="userIdEntry" Placeholder="아이디" Keyboard="Text" />
        <Label Text="이메일을 입력해주세요" FontSize="Medium" />
        <Entry x:Name="emailEntry" Placeholder="이메일" Keyboard="Email" />
        <Button Text="패스워드 찾기" Clicked="OnResetPasswordClicked" />
    </StackLayout>
</ContentPage>
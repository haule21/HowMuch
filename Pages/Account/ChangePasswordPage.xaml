<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Plugin.MauiMTAdmob.Controls;assembly=Plugin.MauiMTAdmob"
             x:Class="HowMuch.ChangePasswordPage"
             Title="패스워드 변경">
    <StackLayout Padding="20">
        <controls:MTAdView/>
        <Label Text="현재 패스워드를 입력해주세요." FontSize="Medium" />
        <Entry x:Name="currentPasswordEntry" Placeholder="현재 패스워드" IsPassword="True" />
        <Label Text="변경할 패스워드를 입력해주세요." FontSize="Medium" />
        <Entry x:Name="changePasswordEntry" Placeholder="변경할 패스워드" IsPassword="True" />
        <Label Text="패스워드 검증: " FontSize="Medium" />
        <Entry x:Name="validatePasswordEntry" Placeholder="패스워드 검증" IsPassword="True" />
        <Button Text="변경" Clicked="ChangePasswordClicked" />
    </StackLayout>
</ContentPage>
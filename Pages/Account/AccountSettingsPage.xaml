             xmlns:controls="clr-namespace:Plugin.MauiMTAdmob.Controls;assembly=Plugin.MauiMTAdmob"
             x:Class="HowMuch.AccountSettingsPage"
             Title="계정 설정">
    <StackLayout Padding="20">
        <controls:MTAdView/>
        <Label Text="계정 설정" FontSize="Large" HorizontalOptions="Center" />
        <Button Text="패스워드 변경" Clicked="btnChangePasswordClicked" />
        <Button Text="이메일 변경" Clicked="btnEmailClicked" />
        <Button Text="로그아웃" Clicked="btnLogoutClicked" />
        <Button Text="계정탈퇴" Clicked="btnDeleteAccountClicked" />
    </StackLayout>
</ContentPage>
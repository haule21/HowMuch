<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Plugin.MauiMTAdmob.Controls;assembly=Plugin.MauiMTAdmob"
             x:Class="HowMuch.MainPage">
    <ContentPage.ToolbarItems>
        <!-- 톱니모양 아이콘을 가진 버튼 -->
        <ToolbarItem Text="설정" 
                 IconImageSource="settings_icon.png" 
        Clicked="OnSettingsClicked" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <controls:MTAdView/>
        <Grid HorizontalOptions="Center" VerticalOptions="Center" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <Button x:Name="btnUnitManagement" Text="단위관리" Margin="5" Grid.Row="0" FontSize="20" Grid.Column="0" Clicked="btnUnitManagement_Clicked" />
            <Button x:Name="btnIngredientsManagement" Text="재료관리" Margin="5" Grid.Row="0" FontSize="20" Grid.Column="1" Clicked="btnIngredientsManagement_Clicked" />
            <Button x:Name="btnSourceManagement" Text="소스관리" Margin="5" Grid.Row="1" FontSize="20" Grid.Column="0" Clicked="btnSourceManagement_Clicked" />
            <Button x:Name="btnRecipeManagement" Text="레시피관리" Margin="5" Grid.Row="1" FontSize="20" Grid.Column="1" Clicked="btnRecipeManagement_Clicked" />
            <Button x:Name="btnStockManagement" Text="재고관리" Margin="5" Grid.Row="2" FontSize="20" Grid.ColumnSpan="2" Grid.Column="0" Clicked="btnStockManagement_Clicked" />
        </Grid>
    </StackLayout>
</ContentPage>

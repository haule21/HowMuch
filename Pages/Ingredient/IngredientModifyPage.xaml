<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HowMuch.IngredientModifyPage"
             Title="재료 수정">
    <StackLayout x:Name="IngredientLayout" BindableLayout.ItemsSource="{Binding Unit}">
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <StackLayout Orientation="Vertical">
                    <Grid x:Name="IngredientGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Text="재료명: "/>
                        <Entry Grid.Row="0" Grid.Column="1"  Grid.ColumnSpan="2" x:Name="IngredientName" Text="{Binding IngredientData.IngredientName}" FontSize="20"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="규격(단위)"/>
                        <Entry Grid.Row="1" Grid.Column="1" x:Name="UnitValue" Text="{Binding IngredientData.UnitValue}" Placeholder="규격을 입력하여주세요. (필수)" Keyboard="Numeric"/>
                        <Picker Grid.Row="1" Grid.Column="2" x:Name="UnitName" ItemsSource="{Binding AllUnit}" SelectedItem="{Binding SelectedItem}" Title="단위">
                            <Picker.ItemDisplayBinding>
                                <Binding Path="UnitName" />
                            </Picker.ItemDisplayBinding>
                        </Picker>
                        <Label Grid.Row="2" Grid.Column="0" Text="구매 가격: "/>
                        <Entry Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="Value" Text="{Binding IngredientData.Price}" Placeholder="단위 기준을 입력해주세요." Keyboard="Numeric"/>
                    </Grid>
                    <Grid HorizontalOptions="Center" Padding="20, 0, 0, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="0" Margin="0, 10" FontSize="20" Text="저장" Clicked="btnSaveClicked"/>
                        <Button Grid.Row="0" Grid.Column="1" Margin="0, 10" FontSize="20" Text="취소" Clicked="btnCancelClicked"/>
                    </Grid>
                </StackLayout>
            </DataTemplate>
        </BindableLayout.ItemTemplate>


    </StackLayout>
</ContentPage>